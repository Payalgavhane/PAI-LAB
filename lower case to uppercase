section .data
    string db "akash", 10   
    len equ $ - string           
section .text
    global _start

_start:
    mov ecx, string             
    call toUpper                 
    call print                   

    mov eax, 1                   
    xor ebx, ebx                
    int 80h

toUpper:
    mov al, [ecx]                
    cmp al, 0                   
    je done                     
    cmp al, 'a'                 
    jb next_char                
    cmp al, 'z'                 
    ja next_char                 
    sub al, 0x20                
    mov [ecx], al              
next_char:
    inc ecx                      
    jmp toUpper                  

done:
    ret                         

print:
    mov eax, 4
    mov ebx, 1                   
    mov edx, len                
    mov ecx, string              
    int 0x80                    

    ret
